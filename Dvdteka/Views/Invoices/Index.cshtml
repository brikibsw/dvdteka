@model IEnumerable<Dvdteka.Models.InvoiceViewModel>

@{
    ViewData["Title"] = "Fakture";
}

<h1>Fakture</h1>

<form>
    <div class="input-group mb-3">
        <input type="text" name="memberName" class="form-control" value="@ViewBag.memberName" placeholder="Traži po članu..." />
        <div class="input-group-append">
            <input type="submit" value="Traži" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Member
            </th>
            <th>
                ReturnTime
            </th>
            <th>Cijena</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var invoice in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => invoice.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => invoice.ReturnTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => invoice.PriceSum)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@invoice.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@invoice.Id">Delete</a>
            </td>
        </tr>
        @foreach(var item in invoice.InvoiceItems)
        {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(a => item.DvdName)
            </td>
            <td>
                @Html.DisplayFor(a => item.RentTime)
            </td>
            <td>
                @Html.DisplayFor(a => item.ReturnTime)
            </td>
            <td>
                @Html.DisplayFor(a => item.Price)
            </td>
        </tr>
        }
}
    </tbody>
</table>
